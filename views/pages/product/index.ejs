<div class="container">
    <div class = "title py-5">
        <h2 class = "position-relative d-inline-block">Produkte</h2>
    </div>

    <form action="/product">
        <div class = "input-group w-50 pb-5">
            <input type = "text" class = "form-control" placeholder="Suche nach Namen..." name="q">
            <button class = "btn btn-primary" type = "submit">Suche</button>
        </div>
    </form>

    <div class="item-content">
        <table class="table">
            <thead>
                <th>Name</th>
                <th>Preis</th>
                <th>Beschreibung</th>
                <th>Anzahl</th>
                <th>Kategorie</th>
            </thead>
            <tbody>
                <% products.forEach(function(product){ %>
                    <tr>
                        <td>
                            <%= product.name %>
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                        <td>
                            <%= product.description %>
                        </td>
                        <td>
                            <%= product.quantity %>
                        </td>
                        <td>
                            <%= product.category.name %>
                        </td>
                        <td> <a class="btn btn-primary py-1" href="/product/<%= product.id %>">anzeigen</a></td>
                        <td> <a class="btn btn-primary py-1" href="/product/<%= product.id %>/edit">ändern</a></td>
                        <td> <a class="btn btn-primary py-1" href="/product/<%= product.id %>/destroy">löschen</a></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <div class="py-5">
            <a class="btn btn-primary" href="/product/new">Hinzufügen</a>
        </div>
    </div>
</div>
</div>