<div class="container py-5">
    <form action="/product/<%=product.id%>/update" method="post">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" value="<%= product.name %>" name="name" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Preis</label>
                <input type="text" class="form-control" maxlength="8" value="<%= product.price %>" name="price" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" maxlength="255" class="form-control" size="40" value="<%= product.description %>" name="description" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Anzahl</label>
                <input type="text" maxlength="255" class="form-control" size="40" value="<%= product.quantity %>" name="quantity" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Kategorie</label>
                <select class="form-select" name="category">
                    <% categories.forEach(function(category){ %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="py-5">
            <button type="submit" class="btn btn-primary">Aktualisieren</button>
        </div>
    </form>
</div>