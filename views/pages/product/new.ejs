<div class="container">
    <form action="/product" method="post" class="py-5">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" name="name" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" maxlength="255" class="form-control" size="40" name="description">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Preis</label>
                <input type="number" class="form-control" maxlength="8" name="price" min="0" required>
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Anzahl</label>
                <input type="number" class="form-control" maxlength="8" min="0" name="quantity">
            </div>
        </div>
        <div class="form-group">
            <label class="col-form-label-lg">Kategorie</label>
             <select class="form-select" name="category">
            <% categories.forEach(function(category){ %>
                <option value="<%= category.id %>"><%= category.name %></option>
            <% }); %>
            </select>
        </div>
        <div class="py-5">
            <button type="submit" class="btn btn-primary mt-4">Hinzuf√ºgen</button>
        </div>
    </form>
</div>