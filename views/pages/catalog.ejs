<h1>Katalog</h1>

<div>
    <table class="table">
        <tbody>
            <% categories.forEach(function(category){ %>
                <tr>
                    <td colspan="3" class="h4">
                        <%= category.name %> <BR>
                    </td>
                </tr>
                <% if (category.products) { %>
                <% category.products.forEach(function(catalog){ %>
                    <tr>
                        <td class="h6">
                            <%= catalog.name %> <BR>
                            <span class="h7"><%= catalog.description %></span>
                        </td>
                        <td class="h6">
                            <%= catalog.price %> &euro;
                        </td>
                    </tr>
                    <% }); %>
                    <% } %>
                <% }); %>
        </tbody>
    </table>
</div>
</div>